{
	"name": "@ekidenfi/ts-sdk",
	"version": "2.0.14",
	"keywords": [
		"aptos",
		"ekiden",
		"sdk"
	],
	"homepage": "https://github.com/ekidenfi/ekiden-ts-sdk#readme",
	"bugs": "https://github.com/ekidenfi/ekiden-ts-sdk/issues",
	"license": "ISC",
	"author": "Ekiden Team <team@ekiden.fi>",
	"repository": "ekidenfi/ekiden-ts-sdk.git",
	"packageManager": "bun@1.3.5",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun run build:cjs && bun run build:esm && bun run build:types",
		"build:cjs": "bun build ./src/index.ts --outdir ./dist --root ./src --format cjs --sourcemap=linked --minify && mv ./dist/index.js ./dist/index.cjs && mv ./dist/index.js.map ./dist/index.cjs.map",
		"build:esm": "bun build ./src/index.ts --outdir ./dist --root ./src --format esm --sourcemap=external --minify",
		"build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
		"dev": "bun build ./src/index.ts --outdir ./dist --root ./src --watch",
		"fix": "bun pkgs:fix && bun i && bun format && bun fix-biome",
		"fix-biome": "biome check --write --unsafe",
		"format": "biome format --write .",
		"lint": "biome lint",
		"pkgs:fix": "syncpack fix-mismatches && syncpack set-semver-ranges && syncpack format",
		"prepare": "bun run update-hooks",
		"publish:dry": "bun publish --dry-run",
		"release": "bun run build && bun publish",
		"update-hooks": "simple-git-hooks"
	},
	"dependencies": {
		"@aptos-labs/ts-sdk": "5.2.0",
		"@noble/curves": "2.0.1",
		"@noble/hashes": "2.0.1",
		"bignumber.js": "9.3.1",
		"reconnecting-websocket": "4.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "1.3.5",
		"dotenv": "17.2.3",
		"simple-git-hooks": "2.13.1",
		"syncpack": "13.0.4",
		"typescript": "5.9.3"
	},
	"simple-git-hooks": {
		"pre-commit": "bun fix && bun lint"
	},
	"syncpack": {
		"semverGroups": [
			{
				"range": "",
				"dependencies": [
					"**"
				],
				"packages": [
					"**"
				]
			}
		],
		"dependencyTypes": [
			"prod",
			"dev",
			"peer",
			"resolutions"
		],
		"indent": "\t",
		"sortFirst": [
			"name",
			"version",
			"description",
			"keywords",
			"homepage",
			"bugs",
			"license",
			"author",
			"repository",
			"private",
			"packageManager",
			"type",
			"main",
			"module",
			"types",
			"exports",
			"files",
			"scripts",
			"dependencies",
			"devDependencies",
			"peerDependencies",
			"trustedDependencies",
			"resolutions",
			"workspaces"
		]
	}
}
